{
  "name": "generator-elderfo-typescript-workspace",
  "version": "0.0.0-development",
  "description": "Boilerplate for typescript projects using yarn workspaces",
  "homepage": "",
  "author": {
    "name": "Chris Getsfred",
    "email": "cgetsfred@gmail.com",
    "url": "http://www.elderfo.com"
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "keywords": [
    "typescript",
    "yarn",
    "workspaces",
    "lerna",
    "packages",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "semantic-release": "^8.2.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest",
    "ci": "jest --coverage",
    "semantic-release":
      "semantic-release pre && npm publish && semantic-release post"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add", "jest --bail --findRelatedTests"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 80,
          "trailingComma": "es5"
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "elderfo/generator-elderfo-typescript-workspace",
  "license": "MIT"
}
